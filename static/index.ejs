<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Draw and Guess</title>
    <link rel="stylesheet" type="text/css" href="/static/css/styles.css">
    <!-- https://www.freeiconspng.com/img/653 -->
    <link rel="icon" href="/static/gfx/gmd.png">
    <link rel="stylesheet"  href="/static/css/login.css">
    <link rel="stylesheet"  href="/static/css/chat.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>

<body>
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <h1 id="title">Draw and Guess game</h1>
    <div class="all_elems">
    <div class="main">
        <div class="word" id="wordID"></div>
        <div class="info" id="infoID"><div class="start-btn"> <button  id="start-game-btn" class="btn btn-primary btn-block">Start the game</button></div></div>
        <div class="drawing">
            <canvas class="canvas" id="canvasDraw"></canvas>
            <canvas class="canvas" id="canvasView"></canvas>
        </div>
        <div class="utils">
            <div class="uc">
                <button id="undoID">Undo</button>
                <button id="clearID">Clear</button>
            </div>
            <div class="color">
                <input type="color" id="colorID">
            </div>
            <div class="size">
                <button id="smallID">Small</button>
                <button id="mediumID">Medium</button>
                <button id="largeID">Large</button>
            </div>
        </div>
        <div class="msg">
            <input id="msgID" type="text" maxlength="128" placeholder="What is your guess?">
        </div>
        <!--THIS WILL BE THE LOGIN, SIGNUP AREA -->
      <!--  <div class="turns" id="turnsID">
            <input id="usernameID" type="text" maxlength="8" placeholder="Please chose a username!">
        </div> -->
        <div class="turns"  id="turnsID">
          <div class="login-section" id="login-sec">
        <%- include ('login/loginForm.html') %>
        </div>
    </div>

</div>
<%- include ('chat/chat.ejs')%>
  </div>

<!-- Modal -->
<div class="modal fade" id="playerStatModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="playerStatModalBody">
      <!--data about the player -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/game.js"></script>
</body>

</html>
